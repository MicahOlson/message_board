<h2>Messages</h2>

<form action="/messages" method="post">
  <div class="form-group">
    <input id="user_name" name="user_name" class="form-control" type="text" placeholder="Enter your name">
  </div>
  <div class="form-group">
    <textarea id="user_post" name="user_post" class="form-control" placeholder="Enter your post" rows="15" maxlength="500"></textarea>
  </div>
  <button class="btn" type="submit">Submit</button>
</form>
